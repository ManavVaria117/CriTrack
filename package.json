{
  "name": "welcome-app",
  "version": "1.0.0",
  "description": "A full-stack web application with Google OAuth authentication",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "test": "cd client && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/welcome-app.git"
  },
  "keywords": [
    "react",
    "express",
    "tailwind",
    "oauth",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/welcome-app/issues"
  },
  "homepage": "https://github.com/yourusername/welcome-app#readme",
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
